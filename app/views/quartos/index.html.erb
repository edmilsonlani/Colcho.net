<% @quartos.each do |quarto| %>
  <tr>
    <td><%= quarto.titulo %></td>
    <td><%= quarto.localizacao %></td>
    <td><%= quarto.descricao %></td>
    <td><%= link_to 'Show', quarto %></td>
    <td><%= link_to 'Edit', edit_quarto_path(quarto) %></td>
    <td><%= link_to 'Destroy', quarto, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

